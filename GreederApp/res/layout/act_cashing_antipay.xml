<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/cmn_titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/cashing_lsv_orderitems"
                android:layout_width="@dimen/narrow_left_area_wid"
                android:layout_height="fill_parent"
                android:background="@color/cmn_radio_item_font_color" 
                 >
            </ListView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.0"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/cashing_lsv_descitems"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" 
                    android:layout_weight="4.0"
                    android:background="@color/cmn_left_area_background"
                    >
                </ListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.0"
                    android:orientation="horizontal" >
                   <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    >
                    <ListView
                        android:id="@+id/cashing_lsv_priceitems"
                        android:layout_width="320dp"
                        android:layout_height="0dp"
                        android:layout_weight="2.0" 
                        android:background="@drawable/white" 
                       />
             <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/antipay_txv_paytime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/darkgray"
                        android:textSize="@dimen/font_size_middle"
                        android:text="@string/cashing_txv_antipay_paytime_text" />

                    <TextView
                        android:id="@+id/antipay_txv_waitor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/darkgray"
                        android:textSize="@dimen/font_size_middle"
                        android:text="@string/apbill_txv_waitor_text" />
                    
                    </LinearLayout>
                    </LinearLayout>
                    <LinearLayout 
					     android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.0"
                        android:orientation="horizontal" 
                        android:background="@drawable/white"
					    android:gravity="left|center">
                <TableLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" 
                        android:gravity="left|center"
                        android:layout_marginLeft="10dip">
                   <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:layout_marginLeft="3dip"
                        android:orientation="horizontal" >
                        
                            <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cashing_txv_cusbill" 
                            android:gravity="left|center"
                            android:layout_marginLeft="15dip"
                            android:textSize="@dimen/font_size_middle"/>
                            <TextView
                            android:id="@+id/textView0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cashing_txv_cusbill_content" 
                            android:gravity="left|center"
                            android:layout_marginLeft="15dip"
                            android:textSize="@dimen/font_size_middle"
                            />
                             </LinearLayout>
                         
                        <TableRow>
                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cashing_txv_allorderdisco" 
                            android:gravity="left|center"
                            android:layout_marginLeft="15dip"
                            android:textSize="@dimen/font_size_middle"/>
                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cashing_txv_allorderdisco_content"
                            android:gravity="left|center"
                            android:layout_marginLeft="15dip"
                            android:textSize="@dimen/font_size_middle" />
                         <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setoffer_btn_discountmoney_text" 
                            android:gravity="left|center"
                            android:layout_marginLeft="15dip"
                            android:textSize="@dimen/font_size_middle"/>
                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cashing_txv_allorderdisco_content" 
                            android:gravity="left|center"
                            android:layout_marginLeft="15dip"
                            android:textSize="@dimen/font_size_middle"/>
                       </TableRow>
                       <TableRow>
                           <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cashing_txv_applyoperator" 
                            android:gravity="left|center"
                            android:layout_marginLeft="15dip"
                            android:textSize="@dimen/font_size_middle"/>
                           <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cashing_txv_applyoperator_content"
                            android:gravity="left|center"
                            android:layout_marginLeft="15dip"
                            android:textSize="@dimen/font_size_middle" />
                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cashing_txv_applytime" 
                            android:gravity="left|center"
                            android:layout_marginLeft="15dip"
                            android:textSize="@dimen/font_size_middle"/>
                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cashing_txv_applytime_content" 
                            android:gravity="left|center"
                            android:layout_marginLeft="15dip"
                            android:textSize="@dimen/font_size_middle"/>
                   
                   </TableRow>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/antipay_btn_sure"
                            style="@style/ButtonBarItem"
                            android:text="@string/common_btn_ok_text" 
                            />

                        <TextView
                            android:id="@+id/antipay_btn_back"
                            style="@style/ButtonBarItem"
                            android:text="@string/common_btn_back_text" 
                            />

                    </LinearLayout>
				</TableLayout> 
                </LinearLayout>
				</LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>