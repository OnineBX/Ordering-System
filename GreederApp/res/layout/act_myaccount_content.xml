<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/cmn_titlebar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:background="@color/cmn_left_area_background"
        android:orientation="vertical">
   		<include 
			android:id="@+id/head_line" 
			layout="@layout/act_myaccount_method_header" 
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" /> 

        <ListView
            android:id="@+id/myaccount_lsv_accountitems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"             
            android:cacheColorHint="@color/cmn_opaque_background" >
        </ListView>
         
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.10" 
        android:cacheColorHint="@color/cmn_opaque_background"
        >

        <TextView
            android:id="@+id/myaccount_txv_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/font_size_middle" />

    </LinearLayout>

</LinearLayout>