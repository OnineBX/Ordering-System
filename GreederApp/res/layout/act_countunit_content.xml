<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_row_height" >		<ImageButton
		    android:id="@+id/countunit_btn_count_reduce"
		    android:layout_width="50dp"
		    android:layout_height="match_parent"
		    android:src="@drawable/ic_button_reduce"
		    android:onClick="onOperate"	    
		/>
		<EditText
		    android:id="@+id/countunit_edt_count"
		    android:layout_width="0dp"
		    android:layout_height="match_parent" 
		    android:layout_weight="1"		      
		    android:numeric="integer"
		/>
		<ImageButton
		    android:id="@+id/countunit_btn_count_add"
		    android:layout_width="50dp"
		    android:layout_height="match_parent"
		    android:src="@drawable/ic_button_plus"
		    android:onClick="onOperate"	    
		/>        
    </LinearLayout>
    <RadioGroup
         android:id="@+id/countunit_container_unit"
         android:layout_width="match_parent"
		 android:layout_height="50dp"
		 android:layout_margin="10dp"
		 android:orientation="horizontal"		 	
    />	  	    
</LinearLayout>