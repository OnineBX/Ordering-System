<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="@string/setting_cate_server_title">
		<EditTextPreference 
			android:key="pref_host"
			android:title="@string/setting_pref_ip_title"
			android:dialogTitle="@string/setting_pref_ip_dlgtitle"
			android:defaultValue="@string/default_host"
			android:summary="@string/setting_pref_ip_summary"
		/>
		<EditTextPreference
    		android:key="pref_port"
    		android:title="@string/setting_pref_port_title" 
    		android:dialogTitle="@string/setting_pref_port_dlgtitle"
    		android:defaultValue="@integer/default_port"		   		
    		android:summary="@string/setting_pref_port_summary"
    	/>
	</PreferenceCategory>                         
	<PreferenceCategory android:title="@string/setting_cate_use_title">
		<EditTextPreference
			android:key="pref_company"
			android:title="@string/setting_pref_company_title"			
			android:dialogTitle="@string/setting_pref_company_dlgtitle"
			android:defaultValue="@string/default_company"				
			android:summary="@string/setting_pref_company_summary"
		/>
		<EditTextPreference
			android:key="pref_terminal"
			android:title="@string/setting_pref_terminal_title"
			android:dialogTitle="@string/setting_pref_terminal_dlgtitle"
			android:defaultValue="@string/default_term"			
			android:summary="@string/setting_pref_terminal_summary"
		/>
		<ListPreference
			android:key="pref_hallsort"
			android:title="@string/setting_pref_hallsort_title" 
			android:dialogTitle="@string/setting_pref_hallsort_dlgtitle"
			android:summary="@string/setting_pref_hallsort_summary"
			android:defaultValue="@string/setting_pref_list_default"		
		/>
		<ListPreference
			android:key="pref_hall"
			android:title="@string/setting_pref_hall_title"
			android:dialogTitle="@string/setting_pref_hall_dlgtitle"
			android:summary="@string/setting_pref_hall_summary"
			android:defaultValue="@string/setting_pref_list_default" 
		/>
	</PreferenceCategory>    	
</PreferenceScreen>
