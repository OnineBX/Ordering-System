<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- PopupWindow左右弹出的效果 -->
    <style name="AnimationFade">
        <item name="android:windowEnterAnimation">@anim/in_lefttoright</item>
        <item name="android:windowExitAnimation">@anim/out_righttoleft</item>
    </style>

    <!-- 活动主题风格 -->
    <style name="DialogNotitleBar" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 对话框 -->
    <style name="DialogLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#FFFAF0</item>
        <item name="android:textSize">@dimen/font_size_big</item>
    </style>

    <!-- Label风格 -->
    <style name="LoginDialogLabel">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#FFFAF0</item>
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="LoginDialogLabel.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">36dp</item>
    </style>

    <style name="LoginDialogLabel.TextView">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <!-- EditText风格 -->
    <style name="LoginFaceEdit">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <!-- 主界面按钮风格 -->
    <style name="NavigateButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:onClick">onSwitch</item>
    </style>

    <!-- 公用风格 -->
    <!-- 标题栏 -->
    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#FFE4E1</item>
    </style>
    <!-- 标题栏TextView -->
    <style name="TitleBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- 横向标签栏 -->
    <style name="TabBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 横向标签栏条目 -->
    <style name="TabBarItem">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16dp</item>
    </style>
    <!-- 侧面标签栏 -->
    <style name="SideBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 侧面标签栏条目 -->
    <style name="SideBarItem">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">16dp</item>
    </style>
    <!-- 小条目容器 -->
    <style name="SmallItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:columnWidth">120dp</item>
        <item name="android:numColumns">3</item>
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- 底边栏容器 -->
    <style name="BottomContainer">
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:background">@color/cmn_bottom_container_background</item>
    </style>
    <!-- 底边栏条目 -->
    <style name="BottomBarItem">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="ButtonBarItem">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>
    <!-- 设置类型的对话框中编辑框风格 -->
    <style name="SettingDlgEdt">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- 设置用对话框醒目文本框 -->
    <style name="SettingDlgNotableTxv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textColor">@color/cmn_direction_font_color</item>
        <item name="android:textSize">@dimen/font_size_big</item>
    </style>
    <!-- 可选类型的GridView风格 -->
    <style name="OptionalGridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:numColumns">4</item>
        <item name="android:columnWidth">120dp</item>
        <item name="android:horizontalSpacing">5dp</item>
        <item name="android:verticalSpacing">5dp</item>
    </style>
    <!-- ListView列文本框风格 -->
    <style name="AdapterViewItem">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AdapterViewItem.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>
    <!-- 可显示结果的设置用按钮风格 -->
    <style name="ResultableBtn">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>
    <!-- ListView头样式 -->
    <style name="ListViewHeaderTxv">
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/cmn_lsv_header_font_color</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <!-- TextView样式 -->
    <!-- 可点击的TextView -->
    <style name="ClickableTxv">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="ClickableTxv.middle">
        <item name="android:textSize">@dimen/font_size_middle</item>
    </style>

</resources>